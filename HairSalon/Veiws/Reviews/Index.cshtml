@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Review review in Model)
    {
      <li>@Html.ActionLink($"{review.Body}", "Details", new { id = review.ReviewId }) | @review.Client.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new review", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>