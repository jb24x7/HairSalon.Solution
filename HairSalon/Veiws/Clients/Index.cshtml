@{
  Layout = "_Layout";
}

@using RestaurantCuisine.Models;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
else
{
  @using (Html.BeginForm("Find", "Restaurants", "post"))
{
  @Html.Label("queryString")
  <p>@Html.TextBox("queryString")</p>
  <p></p>
  <p><input type="submit" value="search for a restaurant" class="btn btn-default" /></p>
}

  <ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>