@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No lients have been added yet!</h3>
} 
else
{
  @using (Html.BeginForm("Find", "Clients", "post"))
{
  @Html.Label("queryString")
  <p>@Html.TextBox("queryString")</p>
  <p></p>
  <p><input type="submit" value="search for a client" class="btn btn-default" /></p>
}

  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>