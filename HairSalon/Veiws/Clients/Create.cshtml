@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>

<p><strong>NOTE:</strong> You need to have at least one stylist before you can add an client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to create a stylist.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  <p>@Html.TextBoxFor(model => model.Name)</p>

  @Html.LabelFor(model => model.Description)
  <p>@Html.TextBoxFor(model => model.Description)</p>

  @Html.LabelFor(model => model.Stylist) <span>&nbsp;</span>
  @Html.DropDownList("StylistId") <span>&nbsp;</span>
  <p></p>
  <p><input type="submit" value="Add new client" class="btn btn-default" /></p>
}
<p>@Html.ActionLink("Show all lients", "Index")</p>